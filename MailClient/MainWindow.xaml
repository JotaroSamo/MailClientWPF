<Window x:Class="MailClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailClient"
        mc:Ignorable="d"
        Title="Авторизация" Height="300" Width="400" Background="Black">
        
    <Grid Background="Yellow">
        <StackPanel>
            <TextBox x:Name="MailName" Margin="40" Text="Почта"  Foreground="White" RenderTransformOrigin="0.5,3.5" Height="20" Width="270" Background="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
            <PasswordBox x:Name="PasswordText" RenderTransformOrigin="0.5,3.5" Height="20" Width="270" Foreground="White" Background="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Button Margin="40" Height="20" Width="270" Content="Вход" Click="Out_Click" Background="Black" Foreground="White"></Button>
            <Button Margin="10" Height="20" Width="100" Content="Регестрация" Click="Reg_Click" Background="Black" Foreground="White"></Button>
        </StackPanel>

    </Grid>
</Window>
