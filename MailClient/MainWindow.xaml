<Window x:Class="MailClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailClient"
        mc:Ignorable="d"
        Title="Authorization" Height="265" Width="547" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" >
    <Window.Background>
        <ImageBrush ImageSource="/Back.jpg"/>
    </Window.Background>

    <Grid Height="229" VerticalAlignment="Top" Margin="0,0,10,0" >
        <Grid.Background>
            <ImageBrush ImageSource="/Back.jpg"/>
        </Grid.Background>
        <TextBox x:Name="MailName" Margin="60,29,155,180"   RenderTransformOrigin="0.5,3.5" Height="20"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF6E0DD0" Foreground="Lime" />
        <PasswordBox x:Name="PasswordText" RenderTransformOrigin="0.5,3.5" Height="20"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="60,57,51,135" Background="#FF6E0DD0" Foreground="Lime"/>
        <Button Margin="60,92,268,10" Content="Enter" Click="Out_Click" Foreground="White" BorderBrush="Red" FontFamily="Comic Sans MS" FontSize="24" >
            <Button.Background>
                <ImageBrush ImageSource="/Gays.png" TileMode="Tile" Stretch="Fill"/>
            </Button.Background>
        </Button>
        <Button Margin="274,92,51,9" Content="Registration" Click="Reg_Click" Foreground="White" FontFamily="Comic Sans MS" FontSize="18" BorderBrush="#FF0004FF" >
            <Button.Background>
                <ImageBrush ImageSource="/Reg.jpg"/>
            </Button.Background>
        </Button>
        <ComboBox x:Name="NameMail" Text="@gmail.com" HorizontalAlignment="Left" Margin="382,28,0,0" VerticalAlignment="Top" Width="90" RenderTransformOrigin="0.478,0.528" BorderBrush="#FF6E0DD0" Background="#FF6E0DD0" Foreground="#FF6E0DD0">
            <ListBoxItem Content="@gmail.com"/>
            <ListBoxItem Content="@mail.ru"/>
        </ComboBox>
        <Label Content="Mail" HorizontalAlignment="Left" Margin="14,24,0,0" VerticalAlignment="Top" Height="29" Width="46" FontFamily="Comic Sans MS" FontSize="14" Foreground="White"/>
        <Label Content="Pass" HorizontalAlignment="Left" Margin="14,58,0,0" VerticalAlignment="Top" Width="62" Foreground="White" FontFamily="Comic Sans MS" FontSize="14"/>
    </Grid>
</Window>
