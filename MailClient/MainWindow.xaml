<Window x:Class="MailClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailClient"
        mc:Ignorable="d"
        Title="Авторизация" Height="222" Width="400">

    <Grid Height="212" VerticalAlignment="Top" >
        <TextBox x:Name="MailName" Margin="60,30,155,162"   RenderTransformOrigin="0.5,3.5" Height="20"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <PasswordBox x:Name="PasswordText" RenderTransformOrigin="0.5,3.5" Height="20"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="60,57,51,135"/>
        <Button Margin="60,91,51,101" Height="20" Content="Вход" Click="Out_Click" />
        <Button Margin="110,116,110,77" Content="Регестрация" Click="Reg_Click" />
        <ComboBox x:Name="NameMail" HorizontalAlignment="Left" Margin="250,28,0,0" VerticalAlignment="Top" Width="90" RenderTransformOrigin="0.478,0.528">
            <ListBoxItem Content="@gmail.com"/>
            <ListBoxItem Content="@mail.ru"/>
        </ComboBox>
        <Label Content="Почта" HorizontalAlignment="Left" Margin="10,27,0,0" VerticalAlignment="Top" Height="23" Width="45"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="9,54,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
