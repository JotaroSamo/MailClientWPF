<Window x:Class="MailClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailClient"
        mc:Ignorable="d"
        Title="Authorization" Height="235" Width="548">

    <Grid Height="212" VerticalAlignment="Top" Margin="0,0,10,0" >
        <TextBox x:Name="MailName" Margin="60,30,155,162"   RenderTransformOrigin="0.5,3.5" Height="20"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <PasswordBox x:Name="PasswordText" RenderTransformOrigin="0.5,3.5" Height="20"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="60,57,51,135"/>
        <Button Margin="60,85,333,7" Content="Enter" Click="Out_Click" Foreground="White" BorderBrush="Red" FontFamily="Comic Sans MS" FontSize="24" >
            <Button.Background>
                <ImageBrush ImageSource="/Items/Gays.png"/>
            </Button.Background>
        </Button>
        <Button Margin="337,82,60,10" Content="Registration" Click="Reg_Click" Foreground="White" FontFamily="Comic Sans MS" FontSize="18" BorderBrush="#FF0004FF" >
            <Button.Background>
                <ImageBrush ImageSource="/Items/Reg.jpg"/>
            </Button.Background>
        </Button>
        <ComboBox x:Name="NameMail" HorizontalAlignment="Left" Margin="388,30,0,0" VerticalAlignment="Top" Width="90" RenderTransformOrigin="0.478,0.528">
            <ListBoxItem Content="@gmail.com"/>
            <ListBoxItem Content="@mail.ru"/>
        </ComboBox>
        <Label Content="Mail" HorizontalAlignment="Left" Margin="10,27,0,0" VerticalAlignment="Top" Height="23" Width="45"/>
        <Label Content="Pass" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top" Width="62"/>
    </Grid>
</Window>
