<Window x:Class="MailClient.MailContent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailClient"
        mc:Ignorable="d"
        Title="MailContent" Height="450" Width="526">
    <Grid >
        <DataGrid Background="Yellow" BorderBrush="#FFF7F7F7" >
            <DataGrid.Columns  >
                <DataGridTextColumn IsReadOnly="True" Header="ID" Width="25" />
                <DataGridTextColumn IsReadOnly="True" Header="Дата" Width="100"/>
                <DataGridTextColumn IsReadOnly="True" Header="От кого" Width="250"/>
                <DataGridTextColumn IsReadOnly="True" Header="Тема" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
